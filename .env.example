# Azure OpenAI Configuration
# Copy this file to .env and replace the placeholder values with your actual credentials

# Your Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://<your-resource-name>.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=<your-api-key>

# Azure OpenAI API version (optional, defaults to 2024-12-01-preview if not set)
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Your Azure OpenAI embedding model deployment name (e.g., text-embedding-3-small)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=<your-deployment-name>
